@model Hotel2.Hoteles

@{
    ViewBag.Title = "Eliminar hotel";
}

<h2>Eliminar hotel</h2>

<h3>Estas seguro que deseas borrar este hotel?</h3>
<div>
    <h4>Hotel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre_hotel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_hotel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.direccion_hotel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion_hotel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.telefono_hotel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono_hotel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria.descripcion_cate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.descripcion_cate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Ver lista de hoteles", "/Index")
        </div>
    }
</div>
